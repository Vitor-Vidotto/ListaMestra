{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "listamestra",
  "version": "0.1.0",
  "identifier": "com.tauri.dev",
  "build": {
    "frontendDist": "../out",
    "devUrl": "http://localhost:3000",
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build"
  },
  "app": {
    "windows": [
      {
        "title": "listamestra",
        "width": 900,
        "height": 800,
        "resizable": true,
        "fullscreen": false,
        "url": "http://localhost:3000",
        "label": "listamestra", 
        "visible": false 
      },
      {
        "width": 900,
        "height": 800,
          "url": "splash.html",
        "label": "splashscreen"
        }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
